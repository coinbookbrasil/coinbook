 {
    "name": "bitcoin-bot",
    "description": "Arbitragem com Bitcoin",
    "logo": "https://biscoint.io/images/biscoint-icon.svg",
    "repository": "https://github.com/coinbookbrasil/coinbook",
	"formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
	},
    "keywords": ["node", "bitcoin","trading","trader","bot","market","maker","algo","crypto"],
    "env": {
      "apiKey": {
        "description": "Sua API Key da Biscoint",
        "required": true
      },
      "apiSecret": {
        "description": "Sua API Secret da Biscoint",
        "required": true
      },
	  "BOT_CHAT": {
        "description": "Chat id do Telegram",
        "required": true
      },
      "BOT_TOKEN": {
        "description": "Token do Telegram",
        "required": true
      },
      "montante": {
        "description": "Valor que você irá operar",
        "required": true,
		"value": "500.00"
      },
      "minPercentualLucro": {
        "description": "Percentual de lucro para acionar o bot",
        "required": true,
		"value": "0.03"
      },
      "valorInicial": {
        "description": "Valor inicial que você depositou",
        "required": true,
		"value": "500.00"
      },
      "dataInicial": {
        "description": "Data que o bot iniciou. xx/xx/xxxx",
        "required": true,
		"value": "15/03/2020"
      }
    }
  }
