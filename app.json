{
  "name": "bitcoin-bot",
  "description": "Arbitragem com Bitcoin",
  "logo": "https://biscoint.io/images/biscoint-icon.svg",
  "repository": "https://github.com/lagoanova/biscoint-arbitrage-bot",
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "keywords": [
    "node",
    "bitcoin",
    "trading",
    "trader",
    "bot",
    "market",
    "maker",
    "algo",
    "crypto"
  ],
  "env": {
    "API_KEY": {
      "description": "Sua API Key da Biscoint",
      "required": true
    },
    "API_SECRET": {
      "description": "Sua API Secret da Biscoint",
      "required": true
    },
    "BOT_CHAT": {
      "description": "Chat id do Telegram. Exemplo: 14872718712",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Token do Telegram. Exemplo: 1688943477:ACDhWI4A0-cy--L3IGgjjp2yuPq2TC7TJvg",
      "required": true
    },
    "AMOUNT": {
      "description": "Valor que você irá operar. Por exemplo, se quer que as operações sejam de 300 reais, especifique amount: 300. Valor padrão: 300",
      "required": true,
      "value": "300.00"
    },
    "MIN_PROFIT_PERCENT": {
      "description": "Percentual de lucro para acionar o bot",
      "required": true,
      "value": "0.03"
    },
    "VALOR_INICIAL": {
      "description": "Valor inicial que você depositou",
      "required": true,
      "value": "300.00"
    },
    "DATA_INICIAL": {
      "description": "Data que o bot iniciou. xx/xx/xxxx",
      "required": true,
      "value": "15/03/2020"
    }
  }
}